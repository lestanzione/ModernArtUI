<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >
	
    <!-- FIRST LINE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:layout_margin="2dp" >
        
        <LinearLayout
            android:id="@+id/block1"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:background="#0033CC"
        	android:orientation="horizontal"
	        android:layout_margin="2dp" />
        
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:orientation="vertical" >
        
            <LinearLayout
                android:id="@+id/block2"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="4"
		        android:background="#FF0000"
        		android:orientation="horizontal"
		        android:layout_margin="2dp" />
            
            <LinearLayout
                android:id="@+id/block3"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="4"
		        android:background="#FF7700"
        		android:orientation="horizontal"
		        android:layout_margin="2dp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/block4"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:background="#00CC99"
	        android:orientation="horizontal"
	        android:layout_margin="2dp" />
        
    </LinearLayout>
    
    <!-- SECOND LINE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp" >
    	
        <LinearLayout
            android:id="@+id/block5"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:background="#EECC00"
	        android:orientation="horizontal"
	        android:layout_marginRight="2dp"
	        android:layout_marginLeft="2dp" />
        
        <LinearLayout
            android:id="@+id/block6"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="5"
	        android:background="#FFFFFF"
	        android:orientation="horizontal"
	        android:layout_marginRight="2dp"
	        android:layout_marginLeft="2dp" />
        
        <LinearLayout
            android:id="@+id/block7"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:background="#FF0088"
	        android:orientation="horizontal"
	        android:layout_marginRight="2dp"
	        android:layout_marginLeft="2dp" />
        
    </LinearLayout>
    
    <!-- THIRD LINE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:layout_margin="2dp" >
        
        <LinearLayout
            android:id="@+id/block8"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:background="#0033CC"
	        android:orientation="horizontal"
	        android:layout_margin="2dp" />
        
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:orientation="vertical" >
        
            <LinearLayout
                android:id="@+id/block9"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="4"
		        android:background="#FF0000"
		        android:orientation="horizontal"
		        android:layout_margin="2dp" />
            
            <LinearLayout
                android:id="@+id/block10"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="4"
		        android:background="#FF7700"
		        android:orientation="horizontal"
		        android:layout_margin="2dp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/block11"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:background="#00CC99"
	        android:orientation="horizontal"
	        android:layout_margin="2dp" />
        
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBarColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
